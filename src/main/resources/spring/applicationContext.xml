<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- 通过无参进行注入，必须存在无参构造函数 -->
    <bean id="user" class="com.imust.entity.User">
        <property name="name" value="李华" />
        <property name="age" value="19" />
    </bean>

    <!-- 通过有参进行注入 -->
    <bean id="user1" class="com.imust.entity.User">
        <constructor-arg name="name" value="路飞" />
        <constructor-arg name="age" value="19" />
    </bean>

    <bean id="user2" class="com.imust.entity.User" p:age="22" p:name="萨博"></bean>

    <!--
        实现自动装配
        bean标签属性autowire，配置自动装配
        autowire属性常用两个值：
            byName根据属性名称注入，注入值bean的id值和类属性名称一致
            byType根据属性类型注入
    -->
    <bean id="emp" class="com.imust.entity.Emp" autowire="byType"></bean>

    <bean id="dept" class="com.imust.entity.Dept"></bean>
</beans>